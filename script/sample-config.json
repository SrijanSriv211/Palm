{
	"load_from_file": false,
	"train_data": "data/base/train",
	"val_data": "data/base/val",
	"init_from": "scratch",

	"checkpoints": {
		"path": "bin/checkpoints",
		"interval": 500
	},
	"save_path": "bin/palm.bin",

	"max_iters": 500000,
	"eval_interval": 1000,
	"log_interval": 100,
	"eval_iters": 100,
	"encoder_path": "bin/cl8k.bin",
	"sample_interval": 1000,

	"gradient_accumulation_steps": 1,
	"batch_size": 16,
	"block_size": 256,

	"vocab_size": 8192,
	"n_layer": 4,
	"n_head": 4,
	"n_embd": 256,
	"n_hidden": 512,
	"d_factor": 4,
	"dropout": 0,

	"learning_rate": 1e-3,
	"weight_decay": 0.01,
	"grad_clip": 1,

	"decay_lr": true,
	"warmup_iters": 2000,
	"lr_decay_iters": 500000,
	"min_lr": 1e-4,
	"beta1": 0.9,
	"beta2": 0.99,

	"device": "cpu",
	"seed": "auto",
	"compile": true
}
